{
  "name": "@mamadoudiop/simple-slider",
  "version": "1.0.0",
  "description": "A tiny React hook for window size with SSR support",
  "license": "MIT",
  "author": "اسم شما",
  "repository": "https://github.com/yourname/use-window-size",
  "homepage": "https://github.com/yourname/use-window-size#readme",
  "keywords": [
    "react",
    "hook",
    "window-size",
    "ssr"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "test": "vitest",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --apply",
    "prepublishOnly": "npm run build",
    "release": "changeset publish"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "biome": "0.3.3",
    "react": "^18.3.1",
    "tsup": "^8.5.1",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  }
}
